<%- include('parts/header') %> 
<%- include('parts/navbar')%>

<div class="container">

  <form action="/" method="GET" style="margin-top:10px ;">
    <select class="form-control" name="category" style="background-color:#212529 ; color:#fff">
      <option value="all">all</option>
      <option value="clothes">Clothes</option>
      <option value="phones">Phones</option>
      <option value="tabl"> Tables</option>
      <option value="computers">Computers</option>
      
      
    </select>
    <button type="submit" class="btn btn-primary" style="background-color:rgb(118, 126, 134) ;  margin-top:4px">Filter</button>
  </form>
   <h2  style="font-family: ExtraBold 600; padding: 9px;color: #212529;">Click on the product name to view product details</h2>
   <% if(products.length === 0) {%>
     <div class="alert alert-danger">
       there is no products
     </div>
    <% }else{ %>
      
    <div class="row">
     
       <% for(let product of products) { %>
            <div class="col col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card" style="width: 18rem; height: 450px; background-color: #212529; color: aliceblue; margin-top: 15px;">
                    <img src="<%= product.image %> " class="card-img-top" style="height:280px ;">
                    <div class="card-body">
                      <h5 class="card-title">
                         <a href="/product/<%= product._id %>" style="text-decoration:none ;color: #9dc9f5;"><%= product.name %> </a>
                         <p>Price: <%= product.price %> $</p>
                        </h5>
                      <form action="/cart" method="POST">
                         <input type="number" name="amount" class="form-control">
                         <button type="submit" class="btn btn-primary" style="background-color: rgb(118, 126, 134); border:#212529; margin-top:2px">Add Cart</button>

                      </form>
                    </div>
                  </div>
            </div>
        <% } %> 
        
    </div>
    <% } %>
</div>
<%- include('parts/footer')%> 

